<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00b0ec"
        android:gravity="center"
        android:textSize="18sp"
        android:text="轻旅行用户登录"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/ll_login"

        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/card_login_num"
            android:drawablePadding="10dp"
            android:hint="手机号码/邮箱/用户名"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="14sp" />

        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/card_login_psw"
            android:drawablePadding="10dp"
            android:hint="密码"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:background="#00b0ec"
            android:text="登录"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="9dp"
                android:text="立即注册"
                android:textColor="#ff710b"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_regist"
                android:text="还没有账号？→"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_login_success"
        android:background="@drawable/loginsuccess"
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/light"
            android:id="@+id/img_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_below="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="133399"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

    </RelativeLayout>


</RelativeLayout>