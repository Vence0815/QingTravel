<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_mian_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_home_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_text_seletor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_guide_selector"
            android:gravity="center"
            android:text="分类导航"
            android:textColor="@drawable/tab_text_seletor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_travel_press"
            android:gravity="center"
            android:text="精品游记"
            android:textColor="@drawable/tab_text_seletor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_mine_selector"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@drawable/tab_text_seletor"
            android:textSize="10sp" />

    </RadioGroup>
</LinearLayout>

