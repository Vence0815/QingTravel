<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_travel_icon"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_travel_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="最在纯美山水之间--细品漫游琴岛湖“新西兰" />

        <TextView
            android:id="@+id/tv_audio"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="饭是钢"
            android:textColor="#999999"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="23dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_travel_icon"
                android:src="@drawable/ic_bbs_read" />

            <TextView
                android:id="@+id/tv_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/iv_eye"
                android:text="3254"
                android:textColor="#999999"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_common"
                android:layout_width="23dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_views"
                android:src="@drawable/ic_bbs_re" />

            <TextView
                android:id="@+id/tv_commons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/iv_common"
                android:text="53"
                android:textColor="#999999"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>