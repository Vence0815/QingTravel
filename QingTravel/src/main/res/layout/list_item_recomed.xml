<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="18dp"
    android:paddingTop="8dp">
      <ImageView
          android:id="@+id/iv_item_icon"
          android:layout_width="145dp"
          android:layout_height="90dp"
          android:src="@drawable/test"
          android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相聚灯光节：星游澳洲-澳大利啊"
        android:layout_toRightOf="@id/iv_item_icon"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#44cdfb"
        android:layout_toRightOf="@+id/iv_item_icon"
        android:layout_below="@+id/tv_item_title"/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tv_item_score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分"
        android:layout_toRightOf="@+id/tv_item_score"
        android:layout_below="@+id/tv_item_title"/>
    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#44cdfb"
        android:id="@+id/tv_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36"
        android:layout_toRightOf="@+id/tv_item_score1"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/tv_item_title"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人参评"
        android:layout_toRightOf="@+id/tv_item_number"
        android:layout_below="@+id/tv_item_title"/>

    <TextView
        android:layout_marginBottom="25dp"
        android:textSize="20sp"
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17999"
        android:textColor="#ff710b"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/qi"
        android:layout_marginRight="2dp"/>
    <TextView
        android:layout_marginBottom="25dp"
        android:id="@+id/qi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>

</RelativeLayout>